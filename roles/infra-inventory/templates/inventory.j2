[master_nodes]
{% for name in groups['master_nodes'] %}
{{ name }} ansible_host={{ hostvars[name]['ansible_host'] }}
{% endfor %}

[worker_nodes]
{% for name in groups['worker_nodes'] %}
{{ name }} ansible_host={{ hostvars[name]['ansible_host'] }}
{% endfor %}

[all:vars]
ansible_user=core
ansible_ssh_private_key_file=~/.ssh/id_rsa_{{ ssh_key }}
ansible_python_interpreter="PATH=/home/core/bin:$PATH python"
